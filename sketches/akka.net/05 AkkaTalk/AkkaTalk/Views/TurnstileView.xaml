<UserControl x:Class="AkkaTalk.Views.TurnstileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Helpers="clr-namespace:AkkaTalk.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <Helpers:TurnstileViewModelLocator x:Key="ViewModelLocator" />
    </UserControl.Resources>
    <UserControl.DataContext>
        <Binding Path="ViewModel" Source="{StaticResource ViewModelLocator}" />
    </UserControl.DataContext>
    
    <DockPanel Background="{Binding Background}">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Get Ticket" Command="{Binding GetTicketCommand}" />
            <Button Content="Walk through" Command="{Binding WalkThroughCommand}" />
        </StackPanel>
        <Image Source="{Binding IconFilename}" Width="160" Height="160" />
    </DockPanel>
</UserControl>
