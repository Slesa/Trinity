<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cl="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="pack://application:,,,/HighRise.LookAndFeel;component/Resources/Base/ConverterResources.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <FontFamily x:Key="FontFamily.Standard">Segoe UI</FontFamily>
    <FontFamily x:Key="FontFamily.Semibold">Segoe UI Semibold</FontFamily>
    <FontFamily x:Key="FontFamily.Light">Segoe UI Win8</FontFamily>
    <FontFamily x:Key="FontFamily.Monospaced">Consolas</FontFamily>

    <cl:Double x:Key="FontSize.TextBox">14</cl:Double>

    <cl:Double x:Key="FontSize.Small">14</cl:Double>
    <cl:Double x:Key="FontSize.Medium">18</cl:Double>
    <cl:Double x:Key="FontSize.Large">20</cl:Double>

</ResourceDictionary>